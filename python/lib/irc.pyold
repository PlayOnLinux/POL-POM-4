    if(len(self.content) > 1000):
	    del self.content[0]
    self.i_ = 0

    self.string_to_write = ""
    while(self.i_ < len(self.content)):
	self.string_to_write += self.smile(self.content[self.i_].replace("\x01","").replace("\x02","").replace("\x1f",""))+"<br />"
	self.i_ += 1

