  def GenColor(self, pseudo):
	i = 0
	somme = 0
	max = 0
	while(i < len(pseudo)):
		somme += ord(pseudo[i])*(i+1)
		max += 127*(i+1)
		i += 1
	

	num=somme * 4095 / max

	while((num > 255 and num < 1000) or (num > 3200)):
		if(num > 3200):
			num /= 2
		else:
			num *= 2
	
	#print num
	if(num < 255):
		return hex("0x0"+hex(num).replace("0x",""))
	else:
		return hex(num)

