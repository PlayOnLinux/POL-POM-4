					self.chaine += self.line[self.i]+" "
					self.i += 1
				#self.chaine = self.chaine[1:len(self.chaine)]
				self.chaine = self.htmlspecialchars(self.chaine).replace("\x01","")
				self.zone_append("<font color='#000099'>"+self.nickname+self.chaine+"</font>")
	
			else:
				self.i = 3
