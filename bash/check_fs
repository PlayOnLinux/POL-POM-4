# This script tests filesystem

[ "$PLAYONLINUX" = "" ] && exit 0
source "$PLAYONLINUX/lib/sources" 

[ "$POL_OS" = "Mac" ] && exit 0

POL_System_CheckFS --just-warning "$POL_USER_ROOT"
returncode="$?"

POL_Debug_Message "Filesystem is compatible"
exit "$returncode"
